@model Role_MVC.ViewModel.DashboardViewModel
<main>
        <h2>Dashboard</h2>
        <section id="status-pedidos">
            <h3>Status dos pedidos</h3>
            <div id="painel">
                <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.PedidosAprovados</p>
                </div>
                <div class="box-status-pedidos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.PedidosPendentes</p>
                </div>
                <div class="box-status-pedidos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.PedidosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-pedidos">
            <h3>Lista de pedidos</h3>
            <table>
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Email</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th>Tipo</th>
                        <th>Data</th>
                        <th>Número de Pessoas</th>
                        <th>Observação</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="10">
                            <p>Pedidos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var pedido in Model.Pedidos )
                    {
                        <tr>
                            <td>@pedido.Cliente.Nome</td>
                            <td>@pedido.Cliente.Email</td>
                            <td>@pedido.Cliente.Cpf</td>
                            <td>@pedido.Cliente.Telefone</td>
                            <td>@pedido.Produto.Tipo</td>
                            <td>@pedido.Produto.Data</td>
                            <td>@pedido.Produto.NumeroPessoas</td>
                            <td>@pedido.Produto.Observacoes</td>
                            <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @pedido.Produto.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @pedido.Produto.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>